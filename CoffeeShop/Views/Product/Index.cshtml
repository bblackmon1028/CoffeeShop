@model IEnumerable<CoffeeShop.Models.ProductViewModel>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<p>Click the product name for details about that product.
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", new {id=item.Id})
                </td>
                <td>
                    @String.Format("{0:c}", item.Price)
                </td>
            </tr>
        }
    </tbody>
</table>
